<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.nextit.springboot.member.MemberMapper">
    <resultMap id="memberMap" type="memberVO">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="createDate" column="create_date"/>
        <result property="modifyDate" column="modify_date"/>
        <collection select="selectRoles" property="authList" column="id" javaType="list" ofType="authorityVO"/>
    </resultMap>
    <select id="findMemberById" parameterType="string" resultMap="memberMap">
        <!-- 과제 -->
        SELECT
            ID,
            NAME,
            PASSWORD,
            EMAIL,
            CREATE_DATE,
            MODIFY_DATE
        FROM
            MEMBER
        WHERE
            ID = #{id}
    </select>
    <select id="selectRoles" parameterType="string" resultType="authorityVO">
        SELECT
            ID,
            ROLE
        FROM
            AUTHORITY
        WHERE
            ID = #{id}
    </select>
    <select id="selectMembers" resultType="memberVO">
        SELECT
            ID,
            NAME,
            PASSWORD,
            EMAIL,
            CREATE_DATE,
            MODIFY_DATE
        FROM
            MEMBER
    </select>
    <update id="changePassword" parameterType="memberVO">
        UPDATE
            MEMBER
        SET
            PASSWORD = #{password}
        WHERE
            ID = #{id}
    </update>
</mapper>